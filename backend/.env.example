# Database Configuration
DATABASE_URL=sqlite:///./telegram_automation.db

# Security Keys (Generate your own secure keys)
SECRET_KEY=your-very-secure-secret-key-here-change-this-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here-change-this

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS Configuration (Add your frontend domain in production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/telegram_automation.log

# Telegram API Configuration (Get from https://my.telegram.org)
